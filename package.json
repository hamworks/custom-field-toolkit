{
    "name": "@hamworks/custom-field-ui-from-json",
    "scripts": {
        "env": "wp-env",
        "start": "wp-scripts start ./src/index.js",
        "build": "NODE_ENV=production wp-scripts build ./src/index.js",
        "format-js": "wp-scripts format-js ./src",
        "lint-php": "./vendor/bin/phpcs --standard=./.phpcs.xml.dist",
        "lint-js": "wp-scripts lint-js ./src",
        "lint-js:fix": "wp-scripts lint-js ./src --fix"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.13.0",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "@wordpress/browserslist-config": "^3.0.1",
        "@wordpress/env": "^3.0.2",
        "@wordpress/eslint-plugin": "^8.0.2",
        "@wordpress/prettier-config": "^1.0.1",
        "@wordpress/scripts": "^13.0.3",
        "husky": "^5.1.3",
        "lint-staged": "^10.5.4",
        "prettier": "npm:wp-prettier@^2.2.1-beta-1",
        "stylelint-config-wordpress": "^17.0.0",
        "typescript": "^4.2.3",
        "wp-types": "^1.9.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "packages/*/package.json": [
            "wp-scripts lint-pkg-json"
        ],
        "{*.css,*.scss}": [
            "npm run lint-style"
        ],
        "*.js": [
            "npm run format-js",
            "npm run lint-js"
        ],
        "*.php": [
            "npm run lint-php"
        ]
    },
    "dependencies": {
        "@wordpress/api-fetch": "^3.21.5",
        "@wordpress/block-editor": "^5.2.10",
        "@wordpress/components": "^12.0.8",
        "@wordpress/core-data": "^2.25.9",
        "@wordpress/data": "^4.26.8",
        "@wordpress/edit-post": "^3.26.10",
        "@wordpress/element": "^2.19.1",
        "@wordpress/plugins": "^2.24.7"
    }
}
